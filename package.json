{
  "name": "fixit-common-ui",
  "version": "1.0.13",
  "description": "A library of react native components to use in the mobile Fixit application",
  "main": "src/index.ts",
  "files": [
    "src/",
    "doczrc.js",
    "tsconfig.json",
    "package.json"
  ],
  "scripts": {
    "dev": "docz dev",
    "build": "docz build",
    "test": "jest --coverage",
    "test:ci": "jest --env=jsdom --testResultsProcessor=\"jest-junit\" --coverage",
    "generate": "node bin/generate.js",
    "g": "node bin/generate.js"
  },
  "dependencies": {
    "react-native": "^0.63.3",
    "react-native-vector-icons": "^7.1.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/preset-flow": "^7.12.1",
    "@testing-library/react-native": "^7.1.0",
    "@types/jest": "^26.0.15",
    "@types/react-native-vector-icons": "^6.4.6",
    "@types/styled-components": "^5.1.4",
    "cache-loader": "^4.1.0",
    "commander": "^6.2.0",
    "docz": "^2.3.2-alpha.0",
    "gatsby": "^2.25.3",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "metro-react-native-babel-preset": "^0.63.0",
    "react": "^16.8.6",
    "react-art": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-native-web": "^0.11.7",
    "react-test-renderer": "^17.0.1",
    "thread-loader": "^3.0.1",
    "url-loader": "^4.1.1"
  },
  "peerDependencies": {
    "react-native": "^0.63.3",
    "react-native-vector-icons": "^7.1.0"
  },
  "jest": {
    "coverageReporters": [
      "cobertura",
      "html",
      "lcov"
    ],
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "test",
    "classNameTemplate": "{classname} - {title}",
    "titleTemplate": "{classname} - {title}",
    "ancestorSeparator": " > ",
    "usePathForSuiteName": "true"
  }
}
